{
	"name": "@ac-essentials/cli",
	"version": "0.1.1",
	"type": "module",
	"main": "./src/index.ts",
	"publishConfig": {
		"access": "public",
		"main": "./dist/index.js"
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"dependencies": {
		"@ac-essentials/misc-util": "workspace:*",
		"type-fest": "^4.41.0"
	},
	"devDependencies": {
		"@ac-essentials/tsconfig": "workspace:*",
		"@ac-essentials/typedoc-config": "workspace:*",
		"@types/node": "22.18.6",
		"rimraf": "6.0.1",
		"typedoc": "0.28.13",
		"typescript": "5.9.2"
	},
	"scripts": {
		"compile": "tsc -p ./tsconfig.build.json -outDir dist",
		"tsc:check": "tsc -noEmit -p ./tsconfig.json",
		"clean": "rimraf dist",
		"build": "yarn clean && yarn compile",
		"test": "yarn run -T vitest run  --project @ac-essentials/cli",
		"prepack": "yarn build",
		"prepublish": "yarn test"
	}
}
